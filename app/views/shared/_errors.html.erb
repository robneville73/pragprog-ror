<% if object.errors.any? %>
    <section class="errors">
        <h2>Uh-oh! Your form couldn't be saved</h2>
        <h3>
            Pleae correct the following <%= pluralize(object.errors.size, "error")%>:
        </h3>
        <ul>
            <% object.errors.full_messages.each do |message|%>
                <li><%= message %></li>
            <% end %>
        </ul>
    </section>
<% end %>