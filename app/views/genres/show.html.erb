<h1><%= @genre.name %></h1>

<aside>
  <% if @movies.present? %>
    <h4><%= @genre.name %> Movies</h4>
    <ul>
      <% @movies.each do |movie| %>
        <li><%= link_to image_tag(movie.image_file_name), movie %></li>
      <% end %>
    </ul>
  <% end %>
</aside>

<section class="admin">
  <%= link_to 'Edit', edit_genre_path(@genre), {class: "button"} %>
  <%= link_to 'Delete', @genre, class: "button", method: :delete, data: { confirmation: "Are you sure?" } %>
</section>