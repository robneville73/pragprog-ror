<%= form_with(model: [@movie, @review], local: true) do |f| %>

    <%= render 'shared/errors', object: @review %>

    <%= f.label :stars %>
    <% Review::RATINGS.each do |star|%>
        <span class="star">
            <%= f.radio_button :stars, star %>
            <%= label_tag star%>
        </span>
    <% end %>
    
    <%= f.label :comment %>
    <%= f.text_area :comment, placeholder: "What did you think of it?" %>

    <%= f.submit "Post Review"%>
<% end %>